<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="isaac.view.WelcomeController">
    <StackPane style="-fx-background-color: rgba(255, 255, 255, 0.8);">
        <VBox spacing="15" alignment="CENTER">
            <Label text="Welcome to NutriTrack!" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label text="A nutrition information database!" style="-fx-font-size: 16px; -fx-text-fill: #34495e; -fx-font-style: italic;"/>
            <HBox spacing="20" alignment="CENTER">
                <VBox.margin>
                    <Insets top="20"/>
                </VBox.margin>
                <!-- fx:id attributes declared to match controller fields -->
                <Button fx:id="continueButton" text="Continue" onAction="#handleContinue"
                        style="-fx-background-color: #1a5490; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 24; -fx-background-radius: 5; -fx-border-color: #0f3d6b; -fx-border-width: 2; -fx-border-radius: 5;"/>
                <Button fx:id="aboutButton" text="About" onAction="#handleAbout"
                        style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 24; -fx-background-radius: 5; -fx-border-color: #1a252f; -fx-border-width: 2; -fx-border-radius: 5;"/>
            </HBox>
        </VBox>
        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>
    </StackPane>
</StackPane>
