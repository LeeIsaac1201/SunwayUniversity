<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="isaac.view.AddIngredientController"
          hgap="10" vgap="10">

    <!-- Padding -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Select Food Item -->
    <Label text="Food Item:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ComboBox fx:id="foodCombo" editable="true" prefWidth="300" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <!-- Quantity in grams -->
    <Label text="Quantity (g):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="gramsField" promptText="e.g. 100" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- Buttons with styling -->
    <Button text="Add" fx:id="okButton" onAction="#handleOk"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 6;"
            GridPane.rowIndex="2" GridPane.columnIndex="0"/>

    <Button text="Cancel" fx:id="cancelButton" onAction="#handleCancel"
            style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 6;"
            GridPane.rowIndex="2" GridPane.columnIndex="1"/>

</GridPane>
